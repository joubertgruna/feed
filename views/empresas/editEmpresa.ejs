<!doctype html>
<%- include('../partials/head.ejs') %>

    <body class="">
        <div id="global-loader"></div>
        <div class="page">
            <div class="page-main">
                <div class="app-header1 header py-1 d-flex">
                    <div class="container-fluid">
                        <div class="d-flex">
                            <a class="header-brand" href="/empresa/empresas">
                                <img style="width: 80px; max-height: fit-content;" src="/assets/images/feed.svg"
                                    class="sgv" alt="logo">
                            </a>
                            <div class="menu-toggle-button">
                                <a class="nav-link wave-effect" href="#" id="sidebarCollapse">
                                    <span class="fa fa-bars"></span>
                                </a>
                            </div>
                            <div class="d-flex order-lg-2 ml-auto header-right-icons header-search-icon">
                                <div class="p-2">
                                    <form class="input-icon ">
                                        <div class="input-icon-addon">
                                            <i class="fe fe-search"></i>
                                        </div>
                                        <input type="search" class="form-control header-search"
                                            placeholder="Pesquisar&hellip;" tabindex="1">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!--cut -->
                <div class="wrapper">
                    <%- include('../partials/sideBarMenu.ejs')%>
                        <div class="content-area">

                            <div class="page-header">

                                <h4 class="page-title">

                                    <span class="badge text-nowrap" style="font-weight: 700;">
                                        Empresa: <%= id.empresa %>
                                    </span>

                                </h4>

                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Editar
                                        empresa
                                    </li>
                                </ol>
                            </div>
                            <div class="row row-cards p-0">

                                <div class="col-sm-12 col-lg-6 col-xl-4 col-md-6">
                                    <div class="card card-img-holder text-default bg-info pb-1 text-white">
                                        <div class="row">
                                            <div class="col-4">
                                                <div
                                                    class="square-icon bg-info text-center align-self-center shadow-info">
                                                    <i style="padding-top: 8px;"
                                                        class="fa fa-area-chart fs-30  text-white mt-4"></i>
                                                </div>
                                            </div>
                                            <div class="col-8">
                                                <div class="card-body card-padding">
                                                    <h5 class="font-weight-bold ">Média das Avaliações: </h5>
                                                    <h1 class="mb-2">
                                                        <%=mediaAvaliacao%>
                                                    </h1>

                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-sm-12 col-lg-6 col-xl-4 col-md-6">
                                    <div class="card card-img-holder text-default bg-secondary pb-1 text-white">
                                        <div class="row">
                                            <div class="col-4">
                                                <div
                                                    class="square-icon bg-secondary text-center align-self-center shadow-secondary">
                                                    <i style="padding-top: 10px;"
                                                        class="fa fa-heart fs-30  text-white mt-4"></i>
                                                </div>
                                            </div>
                                            <div class="col-8">
                                                <div class="card-body card-padding">
                                                    <h5 class="font-weight-bold ">Total de Avaliações: </h5>
                                                    <h1 class="mb-2">
                                                        <%=avaliacoes%>
                                                    </h1>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-12 col-lg-6 col-xl-4 col-md-6">
                                    <div class="card card-img-holder text-default bg-primary text-white pb-1">
                                        <div class="row">
                                            <div class="col-4">
                                                <div
                                                    class="square-icon br-tl-9 bg-primary text-center align-self-center shadow-primary">
                                                    <i style="padding-top: 8px;"
                                                        class="fa fa-users fs-30  text-white mt-4"></i>
                                                </div>
                                            </div>
                                            <div class="col-8">
                                                <div class="card-body card-padding">
                                                    <h5 class="font-weight-bold">Total de Clientes: <h1
                                                            class="mb-2 text-left">
                                                            <%=clientes%>
                                                    </h5>


                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 text-left">
                                    <h4 style="color:blueviolet"> URL: https://feedbrasil.site/empresa/registro/<%=
                                            id.url%>
                                    </h4>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <form method="POST" action="/empresa/edit/<%= id.id %>" class="card">
                                        <div class="card-body">
                                            <h4 class="page-title pb-2 pt-3"
                                                style="color:rgb(58, 58, 58); border-bottom: solid thin silver; font-size: 20px">
                                                Informações
                                                Gerais
                                            </h4>

                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label class="form-label">
                                                            Empresa</label>
                                                        <input name="empresa" type="text" class="form-control"
                                                            value="<%= id.empresa %>">
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-4">
                                                    <div class="form-group">
                                                        <label class="form-label">Nome
                                                            Responsável
                                                        </label>
                                                        <input name="nome" type="text" class="form-control"
                                                            placeholder="Nome Responsável" value="<%= id.nome %>">
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-4">
                                                    <div class="form-group">
                                                        <label class="form-label">E-mail
                                                        </label>
                                                        <input name="email" type="email" class="form-control"
                                                            placeholder="Email" value="<%= id.email %>">
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-4">
                                                    <div class="form-group">
                                                        <label class="form-label">URL
                                                            gerada
                                                        </label>
                                                        <input name="url" type="text" class="form-control"
                                                            placeholder="URL que será gerada" value="<%= id.url %>">
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-4">
                                                    <div class="form-group">
                                                        <label class="form-label">Data de
                                                            inicio do contrato</label>
                                                        <div class="wd-200 mg-b-30">
                                                            <div class="input-group">
                                                                <div class="input-group-prepend">
                                                                    <div class="input-group-text">
                                                                        <i class="fa fa-calendar tx-16 lh-0 op-6"></i>
                                                                    </div>
                                                                </div><input name="dataInicioContrato"
                                                                    class="form-control fc-datepicker"
                                                                    placeholder="<%= id.dataInicioContrato %>"
                                                                    value="<%= id.dataInicioContrato %>" type="text">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr>
                                            <h4 class="page-title pb-2 pt-3"
                                                style="color:rgb(58, 58, 58); border-bottom: solid thin silver; font-size: 20px">
                                                Perguntas
                                            </h4>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label class="form-label">Editar a 1º
                                                            pergunta para o cliente</label>
                                                        <textarea style="color: black" type="text" name="avaliacao1"
                                                            value="" rows="3" class="form-control"
                                                            placeholder="<%= id.avaliacao1 %>"><%= id.avaliacao1 %></textarea>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-4">
                                                    <div class="form-group">
                                                        <label class="form-label">Editar a 2º
                                                            pergunta para o cliente</label>
                                                        <textarea style="color: black" type="text" name="avaliacao2"
                                                            rows="3" class="form-control"
                                                            placeholder="<%= id.avaliacao2 %>"><%= id.avaliacao2 %></textarea>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-4">
                                                    <div class="form-group">
                                                        <label class="form-label">Editar a 3º
                                                            pergunta para o cliente
                                                            <textarea style="color: black" type="text" name="avaliacao3"
                                                                rows="3" class="form-control text-black"
                                                                placeholder="<%= id.avaliacao3 %>"><%= id.avaliacao3 %></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer text-left">
                                            <button type="submit" class="btn btn-success">
                                                <span style="font-weight: 700;">Editar</span></button>
                                            <a href="/empresa/empresas"><button class="btn btn-primary">
                                                    <span style="font-weight: 700;">Voltar</span></button></a>
                                        </div>
                                </div>
                                </form>
                            </div>
                        </div>

                </div>
                <%- include('../partials/footer.ejs') %>