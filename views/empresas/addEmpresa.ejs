                <!--cut -->
                <div class="wrapper">
                    <%- include('../partials/sideBarMenu.ejs')%>
                        <div class="content-area">
                            <div class="page-header">
                                <h4 class="page-title">Adicionar Empresa</h4>
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">
                                        empresasboard
                                        5
                                    </li>
                                </ol>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <form method="POST" action="/empresa/cadEmpresa" class="card">
                                        <div class="card-body">
                                            <h4 class="page-title pb-2 pt-3"
                                                style="color:rgb(58, 58, 58); border-bottom: solid thin silver; font-size: 20px">
                                                Informações
                                                Gerais
                                            </h4>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="form-group"
                                                        style="color: rgb(58, 58, 58);">
                                                        <label class="form-label">Empresa</label>
                                                        <input name="empresa" type="text"
                                                            class="form-control"
                                                            placeholder="Empresa">
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-4">
                                                    <div class="form-group"
                                                        style="color: rgb(58, 58, 58);">
                                                        <label class="form-label">Responsável
                                                        </label>
                                                        <input name="nome" type="text"
                                                            class="form-control"
                                                            placeholder="Nome Cliente">
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-4">
                                                    <div class="form-group">
                                                        <label class="form-label">Email
                                                        </label>
                                                        <input name="email" type="email"
                                                            class="form-control"
                                                            placeholder="Email">
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-4">
                                                    <div class="form-group"
                                                        style="color: rgb(58, 58, 58);">
                                                        <label class="form-label">URL
                                                        </label>
                                                        <input name="url" type="text"
                                                            class="form-control"
                                                            placeholder="URL que será gerada">
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-4">
                                                    <div class="form-group"
                                                        style="color: rgb(58, 58, 58);">
                                                        <label class="form-label"> Inicio do
                                                            contrato</label>
                                                        <input name="dataInicioContrato" type="text"
                                                            class="form-control"
                                                            placeholder="Data do inicio do contrato">
                                                    </div>
                                                </div>
                                            </div>
                                            <hr>
                                            <h4 class="page-title pb-2 pt-3"
                                                style="color:rgb(58, 58, 58); border-bottom: solid thin silver; font-size: 20px">
                                                Perguntas
                                            </h4>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="form-group"
                                                        style="color: rgb(58, 58, 58);">
                                                        <label class="form-label">Digite a 1º
                                                            pergunta para o cliente</label>
                                                        <textarea name="avaliacao1" rows="3"
                                                            class="form-control"
                                                            placeholder="Avaliação 01"></textarea>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-4">
                                                    <div class="form-group"
                                                        style="color: rgb(58, 58, 58);">
                                                        <label class="form-label">Digite a 2º
                                                            pergunta para o cliente</label>
                                                        <textarea name="avaliacao2" rows="3"
                                                            class="form-control"
                                                            placeholder="Avaliação 02 "></textarea>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-4">
                                                    <div class="form-group"
                                                        style="color: rgb(58, 58, 58);">
                                                        <label class="form-label"> Digite a 3º
                                                            pergunta para o cliente </label>
                                                        <textarea name="avaliacao3" rows="3"
                                                            class="form-control"
                                                            placeholder="Avaliação 03"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer text-left">
                                            <button type="submit" class="btn btn-success">
                                                <span style="font-weight: 700;">Adicionar</span>
                                            </button>
                                            <a class="btn btn-primary" style="color: white"
                                                href="/empresa/empresas">
                                                <span style="font-weight: 700;">Voltar</span>
                                            </a>
                                        </div>
                                    </form>
                                </div>
                            </div>

                        </div>
                </div>

            </dizv>
