<%- include('../partials/head.ejs') %>

	<body class="">
		<div id="global-loader"></div>
		<div class="page">
			<div class="page-main">
				<div class="app-header1 header py-1 d-flex">
					<div class="container-fluid">
						<div class="d-flex">
							<a class="header-brand" href="/empresa/empresas">
								<img style="width: 80px; max-height: fit-content;" src="/assets/images/feed.svg"
									class="sgv" alt="logo">
							</a>
							<div class="menu-toggle-button">
								<a class="nav-link wave-effect" href="#" id="sidebarCollapse">
									<span class="fa fa-bars"></span>
								</a>
							</div>
							<div class="d-flex order-lg-2 ml-auto header-right-icons header-search-icon">
								<div class="p-2">
									<form class="input-icon ">
										<div class="input-icon-addon">
											<i class="fe fe-search"></i>
										</div>
										<input type="search" class="form-control header-search"
											placeholder="Pesquisar&hellip;" tabindex="1">
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!--cut -->
				<div class="wrapper">
					<%- include('../partials/sideBarMenu.ejs')%>
						<div class="content-area">
							<div class="page-header">
								<h4 class="page-title">Empresas - Visão Geral
								</h4>

								<ol class="breadcrumb">
									<li class="breadcrumb-item"><a href="#">Home</a></li>
									<li class="breadcrumb-item active" aria-current="page">Lista
										Empresas
									</li>
								</ol>
							</div>

							<div class="row row-cards p-0">
								<div class="col-sm-12 col-lg-6 col-xl-4 col-md-6">
									<div class="card card-img-holder text-default bg-primary text-white pb-1">
										<div class="row">
											<div class="col-4">
												<div
													class="square-icon br-tl-9 bg-primary text-center align-self-center shadow-primary">
													<i style="padding-top: 8px;"
														class="fa fa-building fs-30  text-white mt-4"></i>
												</div>
											</div>
											<div class="col-8">
												<div class="card-body card-padding">
													<h5 class="font-weight-bold">Total de Empresas: <h1
															class="mb-2 text-left">
															<%=count%>
														</h1>
													</h5>


												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="col-sm-12 col-lg-6 col-xl-4 col-md-6">
									<div class="card card-img-holder text-default bg-secondary pb-1 text-white">
										<div class="row">
											<div class="col-4">
												<div
													class="square-icon bg-secondary text-center align-self-center shadow-secondary">
													<i style="padding-top: 10px;"
														class="fa fa-users fs-30  text-white mt-4"></i>
												</div>
											</div>
											<div class="col-8">
												<div class="card-body card-padding">
													<h5 class="font-weight-bold ">Total de Clientes: </h5>
													<h1 class="mb-2">
														<%=contador%>
													</h1>

												</div>
											</div>
										</div>
									</div>
								</div>

								<div class="col-sm-12 col-lg-6 col-xl-4 col-md-6">
									<div class="card card-img-holder text-default bg-info pb-1 text-white">
										<div class="row">
											<div class="col-4">
												<div
													class="square-icon bg-info text-center align-self-center shadow-info">
													<i style="padding-top: 8px;"
														class="fa fa-heart fs-30  text-white mt-4"></i>
												</div>
											</div>
											<div class="col-8">
												<div class="card-body card-padding">
													<h5 class="font-weight-bold ">Total de Avaliações: </h5>
													<h1 class="mb-2">
														<%=avaliacao%>
													</h1>

												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="row row-cards text-center">
								<div class="col-12 text-left">
									<a style="float: right;" href="/empresa/cadastro"><button
											class="btn btn-primary btn-icon font-weight-bold" data-toggle="tooltip"
											data-placement="top" style="border-radius: 12px;">Adicionar Empresa
											<i class="fa fa-plus"></i>
										</button></a>

								</div>
							</div>

							<div class="row row-cards">
								<div class="col-sm-12">
									<div class="card ">
										<div class="card-header">
											<h2 class="card-title">Lista Empresas</h2>
										</div>
										<div>
											<div class="table-responsive ">
												<table class="table card-table  table-hover table-vcenter text-nowrap">
													<thead class="p-0">
														<tr class="p-0">
															<th>ID</th>
															<th>Empresa</th>
															<th>Nome do Cliente</th>
															<th>E-mail</th>
															<th>Url</th>
															<th>Data Inicio</th>
															<th class="text-center">Editar</th>
															<th class="text-center">Deletar</th>
														</tr>
													</thead>
													<% emp.rows.forEach(emp=>{ %>
														<tbody>
															<tr>
																<td>
																	<div class="d-flex align-items-center">
																		<div class="mr-3 text-primary p-0">
																			<%= emp.id %>
																		</div>
																	</div>
																</td>
																<td>
																	<div class="d-flex align-items-center">
																		<div id="empName" class="mr-3 text-primary p-0">
																			<%= emp.empresa %>
																		</div>
																	</div>
																</td>
																<td>
																	<h5 class="mb-0 mt-2 font-weight-semibold p-0">
																		<%= emp.nome %>
																	</h5>
																</td>
																<td>
																	<a href="#" class="text-primary p-0">
																		<%= emp.email %>
																	</a>
																</td>
																<td>
																	<a href="#" class="text-primary p-0">
																		https://feedbrasil.site/empresa/registro/<%=
																			emp.url%>
																	</a>
																</td>
																<td>
																	<a href="#" class="text-primary p-0">
																		<%= emp.dataInicioContrato %>
																	</a>
																</td>
																<td class="text-center p-0">
																	<a href="/empresa/editar/id/<%= emp.id %>/<%= emp.url %>"
																		class=""><i style="font-size: 18px"
																			class="fa fa-pencil"></i>
																	</a>
																</td>
																<td class="text-center p-0">
																	<a class="text-center">
																		<form action="/empresa/delete" method="POST"
																			onsubmit="verifica(event, this)">
																			<input type="hidden" name="id"
																				value="<%= emp.id %>">
																			<button class="btn btn-sm btn-primary "
																				type="submit">
																				<i style="font-size: 18px"
																					class="fa fa-trash"></i>
																			</button>
																		</form>
																	</a>
																</td>
															</tr>
														</tbody>
														<% }) %>
												</table>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
				</div>
			</div>
			<%- include('../partials/footer.ejs') %>
				<script>
					var empName = document.getElementById('#empName')
					function verifica(event, form) {
						event.preventDefault()
						if (event != null) {
							if (isNaN(event)) {
								var desicao = confirm("Deseja Deletar a Empresa", empName)
								if (desicao) {
									form.submit()
								}
							}
						} else {
							alert('Não deletar Cliente')
						}
					}
				</script>