                <!--cut -->
                <div class="wrapper">
                    <%- include('../partials/sideBarMenu.ejs')%>
                        <div class="content-area">
                            <div class="page-header">
                                <h4 class="page-title">Adicionar Cliente</h4>
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Dashboard
                                        5
                                    </li>
                                </ol>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <form method="POST" action="/cliente/cadCliente" class="card">
                                        <div class="card-body">
                                            <h4 class="page-title pb-2 pt-3"
                                                style="color:rgb(58, 58, 58); border-bottom: solid thin silver; font-size: 20px">
                                                Informações
                                                Gerais
                                            </h4>
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label class="form-label">Nome</label>
                                                        <input name="nome" type="text"
                                                            class="form-control" placeholder="Nome">
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-3">
                                                    <div class="form-group">
                                                        <label class="form-label">Email
                                                        </label>
                                                        <input name="email" type="email"
                                                            class="form-control"
                                                            placeholder="Email">
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-3">
                                                    <div class="form-group">
                                                        <label class="form-label">Celular</label>
                                                        <input name="celular" type="text"
                                                            class="form-control"
                                                            placeholder="Celular">
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-3">
                                                    <div class="form-group">
                                                        <label class="form-label">Data
                                                            Nascimento</label>
                                                        <input name="dataNascimento" type="text"
                                                            class="form-control"
                                                            placeholder="Data Nascimento">
                                                    </div>
                                                </div>
                                            </div>
                                            <hr>
                                            <h4 class="page-title pb-2 pt-3"
                                                style="color:rgb(58, 58, 58); border-bottom: solid thin silver; font-size: 20px">
                                                Notas
                                            </h4>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label class="form-label">Nota 01</label>
                                                        <input name="resposta1" type="number"
                                                            class="form-control"
                                                            placeholder="Nota 01">
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-4">
                                                    <div class="form-group">
                                                        <label class="form-label">Nota 02</label>
                                                        <input name="resposta2" type="number"
                                                            class="form-control"
                                                            placeholder="Nota 02">
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 col-md-4">
                                                    <div class="form-group">
                                                        <label class="form-label">Nota 03
                                                            <input name="resposta3" type="number"
                                                                class="form-control"
                                                                placeholder="Nota 03">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer text-left">
                                            <button type="submit" class="btn btn-success">
                                                <span style="font-weight: 700;">Adicionar</span>
                                            </button>
                                            <a class="btn btn-primary" style="color: white"
                                                href="/cliente/clientes">
                                                <span style="font-weight: 700;">Voltar</span>
                                            </a>
                                        </div>
                                    </form>
                                </div>
                            </div>

                        </div>
                </div>
            </div>
